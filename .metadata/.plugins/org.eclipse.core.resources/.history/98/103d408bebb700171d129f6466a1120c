#include "storage.h"
#include <iostream>
#include <fstream>
int main() {
	StorageManagement storage_manager;
	char* name="tmp.txt";
	storage_manager.InitStorage(name, 0);
	fstream out;
	cout<<"ok"<<endl;
	char buffer[PAGE_SIZE];
	out.open("test.txt",ios::in);
	while(!out.eof())
	{
	   out.getline(buffer,PAGE_SIZE,'\n');//getline(char *,int,char) 表示该行字符达到256个或遇到换行就结束
	   storage_manager.Write(buffer, sizeof(buffer));
	   cout<<"ok"<<endl;
	}
	out.close();
	cout<<"end"<<endl;
	return 0;
}


